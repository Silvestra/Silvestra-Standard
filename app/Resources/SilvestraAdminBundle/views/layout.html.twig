<!DOCTYPE html>
<html>

<head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>Silvestra - administrator</title>

    {% block stylesheets %}
        {% stylesheets filter='cssrewrite'
        'components/bootstrap/css/bootstrap.min.css'
        'components/font-awesome/css/font-awesome.css'
        'components/sb-admin/css/sb-admin.css'
        'components/jstree/dist/themes/default/style.min.css'
        'bundles/tadckasitemap/css/sitemap.css'

        '@NercuryTranslationEditorBundle/Resources/public/css/translations_form.css'

        filter='cssrewrite,?yui_css' %}
        <link href="{{ asset_url }}" rel="stylesheet" type="text/css"/>
        {% endstylesheets %}
    {% endblock %}

</head>

<body>

<div id="wrapper">

    <nav class="navbar navbar-default navbar-fixed-top" role="navigation" style="margin-bottom: 0">
        <div class="navbar-header">

        </div>

        <ul class="nav navbar-top-links navbar-right">
            <li class="dropdown">
                <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                    <i class="fa fa-user fa-fw"></i> <i class="fa fa-caret-down"></i>
                </a>
                <ul class="dropdown-menu dropdown-user">
                    <li><a href="{{ url('fos_user_security_logout') }}"><i class="fa fa-sign-out fa-fw"></i> {{ 'logout'|trans({}, 'SilvestraAdminBundle') }}</a>
                    </li>
                </ul>
            </li>
        </ul>

        <div class="navbar-default navbar-static-side" role="navigation">
            <div class="sidebar-collapse">
                {{ silvestra_admin_menu_render() }}
            </div>
        </div>
    </nav>

    <div id="page-wrapper">
        {% if page_header is defined %}
            <div class="row">
                <div>
                    <h1 class="page-header">{{ page_header }}</h1>
                </div>
            </div>
        {% endif %}

        {% block content %}
        {% endblock content %}
    </div>
</div>

{% block javascripts %}
    {% javascripts
    'components/jquery/jquery.min.js'
    'components/bootstrap/js/bootstrap.min.js'
    'components/sb-admin/js/jquery.metisMenu.js'
    'components/sb-admin/js/sb-admin.js'
    'components/sb-admin/js/jquery.cookie.js'
    '@FOSJsRoutingBundle/Resources/public/js/router.js'

    'components/jstree/dist/jstree.min.js'
    '@TadckaSitemapBundle/Resources/public/js/libs/content.js'
    '@TadckaSitemapBundle/Resources/public/js/libs/tree.js'
    '@TadckaSitemapBundle/Resources/public/js/libs/sitemap.js'
    '@TadckaSitemapBundle/Resources/public/js/sitemap.js'
    '@NercuryTranslationEditorBundle/Resources/public/js/translations_form.js'

    filter='?closure' %}
    <script src='{{ asset_url }}' type='text/javascript'></script>
    {% endjavascripts %}

    <script src="/js/fos_js_routes.js"></script>
{% endblock %}

</body>

</html>
